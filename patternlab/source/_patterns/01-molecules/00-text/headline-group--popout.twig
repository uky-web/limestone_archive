{% if level > 0 and level <= 6 %}
	{% set tag = 'h' ~ level %}
{% else %}
	{% set tag = 'div' %}
{% endif %}

<{{tag}} id="{{ headline_group_id|default("headline-group"|uniqid) }}" class="headline-group__popout {{ headline_group_variant }}">
	{% block headline_group %}
		{% include 'molecules-headline-group-head' with { text: heading_line_1, headline_variant: headline_1_font_family|default('font-usual') } %}
    <br>
		{% include 'molecules-headline-group-head' with { text: heading_line_2, headline_variant: headline_2_font_family|default('font-usual') } %}
	{% endblock %}
</{{tag}}>

