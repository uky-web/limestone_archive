{% set props = {
    'carousel_style':'',
    'carousel_variant':carousel_variant,
}%}
{% embed "@limestone/carousel.twig" with props only %}
    {% block slides %}
        {% for i in 0 .. 6 %}
            {% include '@limestone/media-with-caption.twig' with {
                "media":media|default('image'),
                "media_component": media_type|default('image'),
                "media_component_src":fake('imageUrl',{width: 300, height: 168}), 
                "lazy": false, 
                "linked": true,
                "level": level|default(2), 
                "citation_name": fake('name'),
                "caption":text.editorial_paragraphs(1, 5)
            } %}
        {% endfor %}
    {% endblock %}
{% endembed %}
