{% set default_headline = fake('words',{ nb: 3 + random(5), asText: true }) %}

{% set headline_group %}
    {% include '@limestone/headline-group.twig' with {
        "level":level|default(1),
        "headline_group_id":headline_group_id|default("headline-group"|uniqid),
        "headline_group_variant":headline_group_variant,
        "head": head|default(default_headline)|titleize,
    } only %}
{% endset %}

{% set ambient_video %}
    {% include '@limestone/ambient-video.twig' with {
        "poster_image_url":"../../images/video/ambient-demo-poster.jpg",
        "source_large":"https://filesamples.com/samples/video/m4v/sample_1280x720.m4v",
        "source_small":"https://filesamples.com/samples/video/m4v/sample_960x540.m4v",
        "video_type":"video/mp4"
    } only %}
{% endset %}

{% set cta_group %}
    {% include '@limestone/cta-group.twig' with {
        "cta_type":"mixed",
        "button_style": button_style,
        "actions":[{
            "label":"Action 1",
            "url":"example.com"
        },
        {
            "label":"Action 2",
            "url":"example.com"
        }]
    } only %}
{% endset %}

{% set hero_image %}
    {% include 'atoms-image' with {aspect: "16:9", width: 2400} %}
{% endset %}

{% set props = {
    "headline_group": headline_group,
    "ambient_video": ambient_video,
    "cta_group": cta_group,
    "hero_image": hero_image,
    "no_popoout": false,
    "slab_variant": slab_variant,
    "hero_variant": hero_variant
}%}

{% include '@limestone/hero-page-header.twig' with props only %}
