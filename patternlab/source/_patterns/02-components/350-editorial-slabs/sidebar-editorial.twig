{% set content_aside = ['components-media-with-caption','components-call-to-action','components-contact-info','components-pulltext'] %}
{% set sidebar_aside = ['molecules-section-nav','components-contact-info','components-link-collection'] %}
{% set aside_positions = ['align-left','align-right','align-right','align-left'] %}
{% set headlines = [2,2,3,4,2] %}

{% embed 'molecules-slab-2x1'  %}
    {% block slab_content %}
        {% embed 'components-editorial' %}
            {% block editorial_content %}
                {% include 'molecules-headline-group' with { head: "Carousel", sub: "Embedded in the content column", level: 2 } %}
                {% include 'molecules-carousel' with { level: 3 } %}
            {% endblock %}
        {% endembed %}
        {% for i in 0..1 %}
            {% include 'components-editorial' with { 
                    aside : content_aside[i], 
                    aside_position: aside_positions[i],
                    level: headlines[i],
                    cta_variant : 'cta--dark',
                    pulltext_variant: 'pulltext--brief pulltext--dark'
                } only 
            %}        
        {% endfor %}
        {% set grid_columns = ["components-call-to-action","components-call-to-action","components-call-to-action","components-call-to-action"] %}
        {% set columns = 4 %}
        {% set cta_variant = "cta--light" %}
        {# Note: Grids nested in 2x1 containers should be set to 2-columns only #}
        {% include 'molecules-grid' with { grid_type: "grid--2-up", include_headline: true, head: 'Call to Four Actions' } %}
        {% embed 'components-editorial' %}
            {% block editorial_content %}
                {% include 'molecules-headline-group' with { head: "Zipper", sub: "Embedded in the content column", level: 3 } %}
                {% include 'molecules-zipper' %}
            {% endblock %}
        {% endembed %}
        {% embed 'components-editorial' %}
            {% block editorial_content %}
                {% include 'molecules-headline-group' with { head: "Image Gallery", sub: "Embedded in the content column", super: "Click function misbehaves in Pattern Lab frame", level: 3 } %}
                {% include 'molecules-image-gallery' with { level: 4 } %}
            {% endblock %}
        {% endembed %}
    {% endblock %}
    {% block slab_sidebar %}
        {% for comp in sidebar_aside %}
            {% include comp with {
                section_nav_variant: 'section-nav--blue-gray',
                link_collection_variant : 'link-collection--bordered',
                brief: true
            } only %}
        {% endfor %}
    {% endblock %}
{% endembed %} 