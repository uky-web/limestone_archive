{% set sidebar_aside = ['molecules-section-nav'] %}

{% embed '@limestone/slab-2x1.twig'  %}
    {% block slab_content %}
        {% include 'components-contact-info' with {contact_info_variant : "contact-info--sheet", hide_image: hide_image|default(false) } %}
        {% if profile_bio %}
            {% for i in 0..1 %}
                {% include 'components-editorial' only %}        
            {% endfor %}
        {% endif %}
    {% endblock %}
    {% block slab_sidebar %}
        {% for comp in sidebar_aside %}
            {% include comp with {
                section_nav_variant: 'section-nav--blue-gray',
                link_collection_variant : 'link-collection--bordered',
                brief: true
            } only %}
        {% endfor %}
    {% endblock %}
{% endembed %} 