{% set headline_group_props = {
	"level":level|default(2),
	"headline_group_id":headline_group_id|default("headline-group"|uniqid),
	"headline_group_variant":headline_group_variant,
	"head": random(['99.99%','99th','9 out of 10','$9,999,999','9:10','98/99']),
	"sub": fake('bs') ,
}%}

{% set button_props = {
    'label':button_label|default("Button label"),
    'button_variant':button_variant
}%}

{% set formatted_text_props = {
	content: text.editorial_paragraphs(1, 1)
}%}

{% if cta_variant in ['cta--dark', 'cta--ghost'] %}
    {% set button_props = button_props|merge({'button_variant':'button--ghost'}) %}
{% endif %}

<div class="cta large-cta text-center {{ cta_variant }}">
    {% include '@limestone/headline-group.twig' with headline_group_props %}
    {% include "@limestone/formatted-text.twig" with formatted_text_props only %}
    <p>{% include '@limestone/button.twig' with button_props only %}</p>

</div>