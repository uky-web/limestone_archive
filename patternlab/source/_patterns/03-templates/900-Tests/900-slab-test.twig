{% extends 'base.twig' %}
{% block main_content %}
    {% set slab_styles = ['wildcat-black','wildcat-white','wildcat-blue','blue-gray'] %}
    {% set grid_types = ['2-up','3-up','4-up'] %}
    {% for skin in slab_styles %}
        {% include '@limestone/slab.twig' with { slab_variant: 'slab--' ~ skin } %}
        {% include '@limestone/slab-1x2.twig' with { slab_variant: 'slab--' ~ skin } %}
        {% include '@limestone/slab-2x1.twig' with { slab_variant: 'slab--' ~ skin } %}
        {% for grid in grid_types %} 
            {% include 'molecules-grid' with {
                    slab_variant: 'slab--' ~ skin, 
                    grid_type: 'grid--' ~ grid, 
                    grid_cols: loop.index + 1
                } 
            %}
        {% endfor %}
    {% endfor %}
{% endblock %}