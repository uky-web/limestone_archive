{% set slabstyles = ["wildcat-white","wildcat-blue"] %}

{% for skin in slabstyles %}
    {% embed '@limestone/slab.twig' with { slab_variant: 'slab--' ~ skin } %}
        {% block slab_content %}
            {% set sizes = ['small','','large'] %}
            {% for size in sizes %}
                {% if size is not sameas('') %}
                    {% set sizeclass = 'button--' ~ size %}
                    {% set sizelabel = size|capitalize %}
                {% else %}
                    {% set sizeclass = '' %}
                    {% set sizelabel = 'Default' %} 
                {% endif %}
                {% include 'atoms-heading' with { headline: sizelabel ~ ' Buttons'} %}
                <p>
                    {% include 'atoms-link' with { link_variant: 'button ' ~ sizeclass, label : 'Link Button' } %}
                    {% include 'atoms-button' with { button_variant: sizeclass, label : 'Button' } %}
                    {% include 'atoms-button' with { button_variant: 'button--ghost ' ~ sizeclass, label : 'Ghost' } %}
                    {% include 'atoms-button' with { button_variant: sizeclass, label : 'Disabled', disabled: true } %}
                    {% include 'atoms-button' with { button_variant: 'button--ghost ' ~ sizeclass, disabled: true, label : 'Disabled Ghost' } %}
                </p>            
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endfor %}