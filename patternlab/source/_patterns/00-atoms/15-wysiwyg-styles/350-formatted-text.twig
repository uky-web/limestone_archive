{% set formatted_text_props = {
	content: text.editorial_paragraphs(3, 5)
}%}

{% if standalone %}
	{% embed '@limestone/slab.twig' with { slab_variant : 'slab--wildcat-white editorial' } %}
		{% block slab_content %}
			{% include "@limestone/formatted-text.twig" with formatted_text_props only %}
		{% endblock %}
	{% endembed %}
{% else %}
	{% include "@limestone/formatted-text.twig" with formatted_text_props only %}
{% endif %}
