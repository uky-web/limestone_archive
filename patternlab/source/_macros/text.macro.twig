{% macro editorial(sentences) %}
	{% for i in 1..sentences|default(4) %}
		{% set selection = random(10) %}
		{% if selection >= 9 and not loop.first %}
			{% include 'atoms-link' with { label : fake('sentence',{nbWords: 3}) } %}
		{% elseif selection == 8 %}
			<strong>{{ fake( 'sentence', {nbWords : random(20)} ) }}</strong>
		{% elseif selection == 7 %}
			<em>{{ fake( 'sentence', {nbWords : random(20)} ) }}</em>
		{% else %}
			{{ fake( 'sentence', {nbWords : random(20)} ) }}
		{% endif %}
	{% endfor %}
{% endmacro %}
