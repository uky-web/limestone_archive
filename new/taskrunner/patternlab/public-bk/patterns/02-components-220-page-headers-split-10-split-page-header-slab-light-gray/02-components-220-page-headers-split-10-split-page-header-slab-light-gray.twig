{% set default_headline = fake('words',{ nb: 3 + random(5), asText: true }) %}
{% embed 'molecules-slab' with {slab_variant : slab_variant|default('slab--wildcat-white') ~ " page-header page-header--split " ~ hero_variant} %}
    {% block slab_outer %}
        <div class="page-header--split__hero">
            {% include 'atoms-image' with {aspect: "4:3", width: 1800} %}
        </div>
        <div class="slab__wrapper">
            <div class="page-header__content">
                {% include 'molecules-headline-group' with { level : 1, head:head|default(default_headline)|titleize } %}
                {% if with_cta %}
                    {% include 'molecules-cta-group' %}
                {% endif %}
            </div>
        </div>
    {% endblock %}
{% endembed %}