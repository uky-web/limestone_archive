{% extends 'base.twig' %}

{% set news_grid_columns = [ "components-teaser", "components-teaser", "components-teaser"] %}
{#{% set media_grid_columns = [ "components-news-preview-with-media", "components-news-preview-with-media", "components-news-preview-with-media"] %}#}
{% set calendar_columns = [ "components-calendar-preview", "components-calendar-preview", "components-calendar-preview"] %}
{% set statistics = [ "components-statistic", "components-statistic", "components-statistic"] %}
{% set call_to_actions = [ "components-large-call-to-action", "components-large-call-to-action", "components-large-call-to-action" ] %}

{% block main_content %}
    {% include 'components-' ~ page_header|default('hero-page-header')
        with {
            heading_line_1: 'PERSERVERANCE',
            heading_line_2: 'PAYS OFF'
        }
    %}
    {% include 'components-block-columns'
        with {
            columns: 3,
            grid_columns: news_grid_columns,
            slab_variant: 'slab--dark-wildcat',
            aspect: '3:2',
            button_label: 'Read More',
            include_headline: true,
            head: 'IN THE NEWS',
            button_variant: 'button--bluegrass'
        } %}
    {% include 'components-block-columns'
        with {
            aspect: '16:9',
            columns: 3,
            grid_columns: calendar_columns,
            slab_variant: 'slab--bluegrass',
            calendar_date_color: 'goldenrod',
            include_headline: true,
            head: "CALENDAR",
            calendar_preview: true
        } %}
    {% include 'components-block-columns'
        with {
            columns: 3,
            grid_columns: call_to_actions,
            cta_variant: 'cta--ghost',
            slab_variant: 'slab--speckled',
        } %}
    {% include 'molecules-headline-group'
        with {
            level: 1,
            head: "Explore Your Wildest Ambitions",
            super: "Come take the University of Kentucky",
            sub: "Virtual Tour",
            headline_group_variant: "text-center"
        } %}
    {% include 'components-block-columns'
        with {
            columns: 3,
            grid_columns: statistics,
            slab_variant: 'slab--speckled',
            grid_style: "grid--divided"
        } %}
{% endblock %}

