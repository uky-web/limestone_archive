{% if reverse_order %}
    {% set gridlayout = 'grid--sidebar-left' %}
{% else %}
    {% set gridlayout = 'grid--sidebar-right' %}
{% endif %}

{% embed 'molecules-slab' with { slab_variant: slab_variant } %}
    {% block slab_outer %}
        <div class="grid {{ gridlayout }}">
            {% if reverse_order %}
                <div class="grid__column grid__column--article">
                    {% include 'atoms-placeholder' %}
                </div>
                <div class="grid__column grid__column--sidebar">
                    {% include 'atoms-placeholder' %}
                </div>            
            {% else %}
                <div class="grid__column grid__column--sidebar">
                    {% include 'atoms-placeholder' %}
                </div>                        
                <div class="grid__column grid__column--article">
                    {% include 'atoms-placeholder' %}
                </div>
            {% endif %}
        </div>
    {% endblock %}
{% endembed %}