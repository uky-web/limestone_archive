{% set default_headline = fake('words',{ nb: 3 + random(5), asText: true }) %}
{% embed 'molecules-slab' with {slab_variant : slab_variant ~ ' page-header page-header--text'} %}
    {% block slab_content %}
        {% include 'molecules-headline-group' with { level: 1, head:head|default(default_headline)|titleize } %}
        {% if with_cta %}
            {% include 'molecules-cta-group' with {cta_type: 'mixed'} %}
        {% endif %}
    {% endblock %}
{% endembed %}
